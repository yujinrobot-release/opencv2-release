<?xml version="1.0"?>
<package>
  <name>opencv2</name>
  <version>:{version}</version>
  <description>Cutting edge releases from the opencv 2.4.x.y series.</description>

  <maintainer email="d.stonier@gmail.com">Daniel Stonier</maintainer>
  <license>BSD</license>

  <url type="website">http://opencvg.org</url>
  <url type="bugtracker">http://code.opencv.org/projects/opencv/issues</url>
  <url type="repository">https://github.com/itseez/opencv</url>

  <author>The OpenCV team</author>

  <build_depend>ffmpeg</build_depend>
  <build_depend>jasper</build_depend>
  <build_depend>libjpeg</build_depend>
  <build_depend>libpng12-dev</build_depend>
  <build_depend>libqt4-dev</build_depend>
  <build_depend>libqtgui4</build_depend>
  <build_depend>libtiff-dev</build_depend>
  <build_depend>libv4l-dev</build_depend>
  <build_depend>python</build_depend>
  <build_depend>python-numpy</build_depend>
  <build_depend>python-support</build_depend>
  <build_depend>zlib</build_depend>

  <buildtool_depend>cmake</buildtool_depend>

  <run_depend>catkin</run_depend>
  <run_depend>ffmpeg</run_depend>
  <run_depend>jasper</run_depend>
  <run_depend>libjpeg</run_depend>
  <run_depend>libpng12-dev</run_depend>
  <run_depend>libqtgui4</run_depend>
  <run_depend>python</run_depend>
  <run_depend>python-numpy</run_depend>
  <run_depend>python-support</run_depend>
  <run_depend>zlib</run_depend>

  <export>
    <build_type>cmake</build_type>
  </export>
</package>
